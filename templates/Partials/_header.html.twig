<section>
  <nav
    class="group w-16 hover:w-48 transition-all ease-in-out duration-500 h-screen bg-[#444] text-white font-bold fixed flex items-center justify-start"
  >
    <ul class="space-y-6">
      <!-- ----------------------------------------------------------------------------------- -->

      <!-- Accueil -->

      <li class="flex items-center gap-4 px-4 hover:text-[#3c8dbc]">
        <a href="{{ path('home') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-house"
            >
              <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8" />
              <path
                d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
              />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Accueil</span
          >
        </a>
      </li>

      <!-- ----------------------------------------------------------------------------------- -->

      {% if app.user %}

      <!-- Le forum -->

      <li class="flex items-center gap-4 px-4 hover:text-[#3c8dbc]">
        <a href="{{ path('app_forum') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-gamepad-2"
            >
              <line x1="6" x2="10" y1="11" y2="11" />
              <line x1="8" x2="8" y1="9" y2="13" />
              <line x1="15" x2="15.01" y1="12" y2="12" />
              <line x1="18" x2="18.01" y1="10" y2="10" />
              <path
                d="M17.32 5H6.68a4 4 0 0 0-3.978 3.59c-.006.052-.01.101-.017.152C2.604 9.416 2 14.456 2 16a3 3 0 0 0 3 3c1 0 1.5-.5 2-1l1.414-1.414A2 2 0 0 1 9.828 16h4.344a2 2 0 0 1 1.414.586L17 18c.5.5 1 1 2 1a3 3 0 0 0 3-3c0-1.545-.604-6.584-.685-7.258-.007-.05-.011-.1-.017-.151A4 4 0 0 0 17.32 5z"
              />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Forum</span
          >
        </a>
      </li>

      {% endif %}

      <!-- ----------------------------------------------------------------------------------- -->

      <!-- les événements -->

      <li class="flex items-center gap-4 px-4 hover:text-[#3c8dbc]">
        <a href="{{ path('app_event') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-handshake"
            >
              <path d="m11 17 2 2a1 1 0 1 0 3-3" />
              <path
                d="m14 14 2.5 2.5a1 1 0 1 0 3-3l-3.88-3.88a3 3 0 0 0-4.24 0l-.88.88a1 1 0 1 1-3-3l2.81-2.81a5.79 5.79 0 0 1 7.06-.87l.47.28a2 2 0 0 0 1.42.25L21 4"
              />
              <path d="m21 3 1 11h-2" />
              <path d="M3 3 2 14l6.5 6.5a1 1 0 1 0 3-3" />
              <path d="M3 4h8" />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Evenements</span
          >
        </a>
      </li>

      <!-- ----------------------------------------------------------------------------------- -->

      {% if app.user %}

      <!-- Mon profil -->

      <li class="flex items-center gap-4 px-4 hover:text-[#3c8dbc]">
        <a href="{{ path('app_profil') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-user-pen"
            >
              <path d="M11.5 15H7a4 4 0 0 0-4 4v2" />
              <path
                d="M21.378 16.626a1 1 0 0 0-3.004-3.004l-4.01 4.012a2 2 0 0 0-.506.854l-.837 2.87a.5.5 0 0 0 .62.62l2.87-.837a2 2 0 0 0 .854-.506z"
              />
              <circle cx="10" cy="7" r="4" />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Profil</span
          >
        </a>
      </li>

      {% endif %}

      <!-- ----------------------------------------------------------------------------------- -->

      {% if app.user %}

      <!-- Déconnexion -->

      <li class="flex items-center gap-4 px-4 hover:text-[red]">
        <a href="{{ path('app_logout') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-log-out"
            >
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
              <polyline points="16 17 21 12 16 7" />
              <line x1="21" x2="9" y1="12" y2="12" />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 hover:text-[red] transition-opacity duration-500"
            >Déconnexion</span
          >
        </a>
      </li>

      <!-- ----------------------------------------------------------------------------------- -->

      {% else %}

      <!-- Connexion -->

      <li class="flex items-center gap-4 px-4 hover:text-[#3c8dbc]">
        <a href="{{ path('app_login') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-log-in"
            >
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
              <polyline points="10 17 15 12 10 7" />
              <line x1="15" x2="3" y1="12" y2="12" />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Connexion</span
          >
        </a>
      </li>

      <!-- ----------------------------------------------------------------------------------- -->

      <!-- Inscription -->

      <li class="flex items-center gap-4 px-4 hover:text-[#28a745]">
        <a href="{{ path('app_register') }}" class="flex items-center">
          <span class="text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-user-round-plus"
            >
              <path d="M2 21a8 8 0 0 1 13.292-6" />
              <circle cx="10" cy="8" r="5" />
              <path d="M19 16v6" />
              <path d="M22 19h-6" />
            </svg>
          </span>
          <span
            class="ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >Inscription</span
          >
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>
</section>
